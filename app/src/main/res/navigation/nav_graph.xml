<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nameInputFragment">

    <fragment
        android:id="@+id/nameInputFragment"
        android:name="com.example.qcm.NameInputFragment"
        android:label="Name Input"
        tools:layout="@layout/fragment_name_input">
        <action
            android:id="@+id/action_nameInputFragment_to_questionFragment"
            app:destination="@id/questionFragment" />
    </fragment>

    <!-- Fragment pour les questionFragments -->
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.example.qcm.QuestionFragment"
        android:label="Question"
        tools:layout="@layout/fragment_question">
        <action
            android:id="@+id/action_questionFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>

    <!-- Fragment pour les rÃ©sultats -->
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.qcm.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result" />
</navigation>

